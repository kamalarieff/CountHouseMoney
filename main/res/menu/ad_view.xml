<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        android:id="@+id/menu_favourite"
        android:icon="@drawable/ic_favorite_white"
        android:title="@string/ad_view_menu_fav"
        app:showAsAction="always" />

    <item
        android:id="@+id/menu_share"
        android:icon="@drawable/ic_share_white"
        android:title="@string/ad_view_menu_share"
        app:showAsAction="always" />
    <!--Use group so that we can hide all menu in one time but all menu here will be placed under the overflow menu
    Hence, we leave the fav menu outside the group
    -->
    <group
        android:id="@+id/menu_adview_group"
        android:visible="true">

        <item
            android:id="@+id/menu_delete"
            android:enabled="true"
            android:icon="@drawable/ic_delete_white"
            android:title="@string/ad_view_menu_delete"
            app:showAsAction="ifRoom" />
        <item
            android:id="@+id/menu_report"
            android:icon="@drawable/ic_report_white"
            android:menuCategory="system"
            android:orderInCategory="100"
            android:title="@string/report"
            app:showAsAction="ifRoom" />
    </group>
</menu>