<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="FambaTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/action_bar_red</item>
        <item name="colorPrimaryDark">@color/primary_red</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/body</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:buttonStyle">@style/Widget.Button</item>
        <item name="android:listViewStyle">@style/Widget.List</item>
        <item name="android:textViewStyle">@style/Widget.TextView</item>
        <item name="android:editTextStyle">@style/Widget.EditText</item>
        <item name="android:radioButtonStyle">@style/Widget.RadioButton</item>
        <item name="android:progressBarStyleHorizontal">@style/Widget.ProgressBar.Horizontal</item>
        <item name="android:spinnerItemStyle">@style/TextAppearance.Medium</item>
        <item name="android:title"></item>
        <item name="android:actionOverflowButtonStyle" tools:targetApi="11">
            @style/CustomOverFlowMenu.OverFlow
        </item>
        <item name="actionOverflowButtonStyle">@style/CustomOverFlowMenu.OverFlow</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="alertDialogTheme">@style/MudahDialogStyle</item>
    </style>

    <!-- To allow the drawer to be drawn on the system bar for v21. For lower version, just leave it empty -->
    <style name="FambaMenuTheme" parent="FambaTheme"/>
    <style name="HomepageMenuTheme" parent="FambaTheme"/>

    <style name="DialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTranslucentStatus" tools:targetApi="19">false</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="FambaTheme.DeleteMenu">
        <item name="android:actionOverflowButtonStyle" tools:targetApi="11">
            @style/DeleteMenu.OverFlow
        </item>
        <item name="actionOverflowButtonStyle">@style/DeleteMenu.OverFlow</item>
    </style>

    <style name="DeleteMenu.OverFlow" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_delete</item>
    </style>

    <style name="CustomOverFlowMenu.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow_white</item>
    </style>

    <style name="FambaTheme.NoDisplay">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoDisplay">true</item>
    </style>

    <style name="AppCompat_no_title" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- Text appearance -->
    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">11dp</item>
    </style>

    <style name="TextAppearance.Medium"></style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextAppearance.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.White.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget"></style>
    <!-- Buttons -->
    <style name="Widget.Button" parent="android:Widget.Button">
        <item name="android:textAppearance">@style/TextAppearance.Medium</item>
        <item name="android:background">@drawable/btn_grey</item>
        <item name="android:minHeight">46dip</item>
    </style>

    <!-- Text input -->
    <style name="Widget.EditText" parent="android:Widget.EditText">
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:minHeight">46dip</item>
    </style>

    <style name="Widget.List" parent="android:Widget.ListView">
        <item name="android:cacheColorHint">@color/body</item>
        <item name="android:divider">@color/grey_divider</item>
        <item name="android:dividerHeight">1dip</item>
    </style>

    <style name="Widget.TextView" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="Widget.ProgressBar.Horizontal" parent="android:Widget.ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>

    <style name="Widget.RadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selector_radio_button</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/action_bar_background</item>
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="@android:title"></item>
        <item name="icon">@drawable/top_menu_logo</item>
        <item name="android:icon">@drawable/top_menu_logo</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:displayOptions" tools:targetApi="11">showHome|useLogo</item>
    </style>

    <style name="CustomMenuTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- For back button color on the action bar -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>

        <item name="colorPrimary">@color/action_bar_red</item>
        <item name="colorPrimaryDark">@color/primary_red</item>

    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/CustomTabText</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/actionbar_filter_background</item>
    </style>

    <bool name="abc_config_actionMenuItemAllCaps">false</bool>
</resources>
