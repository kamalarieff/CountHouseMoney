<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar" />

    <fragment
        android:id="@+id/f_actionbar"
        android:name="com.mudah.my.fragments.InitializationFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/filter_layout_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:fadeScrollbars="false"
            android:isScrollContainer="true"
            android:overScrollMode="never"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/filter_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/menu_type"
                    style="@style/FilterMenu.Dropdown">

                    <ImageView
                        android:id="@+id/iv_type_icon"
                        style="@style/FilterMenu.IconStyle"
                        android:src="@drawable/ic_filter" />

                    <LinearLayout
                        style="@style/FilterMenu.TxtContainer"
                        android:layout_toRightOf="@+id/iv_type_icon">

                        <TextView
                            android:id="@+id/tv_type_title"
                            style="@style/FilterActivity.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ads_search_filter" />

                        <TextView
                            android:id="@+id/tv_type_selected"
                            style="@style/FilterActivity.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Placeholder" />

                    </LinearLayout>

                    <ImageView style="@style/FilterMenu.DropdownArrow" />

                </RelativeLayout>

                <View
                    android:id="@+id/v_filter_info_separator"
                    style="@style/FilterMenu.ItemSeparator"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="5dp" />

                <LinearLayout
                    android:id="@+id/ll_filter_info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="40dp"
                    android:paddingRight="5dp"
                    android:textAppearance="@style/TextAppearance.Medium"
                    android:visibility="gone"
                    tools:background="@color/grey"
                    tools:layout_height="56dp"
                    tools:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/menu_sort_by"
                    style="@style/FilterMenu.Dropdown">

                    <View
                        style="@style/FilterMenu.ItemSeparator"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:id="@+id/iv_sortby_icon"
                        style="@style/FilterMenu.IconStyle"
                        android:src="@drawable/ic_sort" />

                    <LinearLayout
                        style="@style/FilterMenu.TxtContainer"
                        android:layout_toRightOf="@+id/iv_sortby_icon">

                        <TextView
                            android:id="@+id/tv_sortby_title"
                            style="@style/FilterActivity.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ads_search_sort_by" />

                        <TextView
                            android:id="@+id/tv_sortby_selected"
                            style="@style/FilterActivity.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Placeholder" />

                    </LinearLayout>

                    <ImageView style="@style/FilterMenu.DropdownArrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/menu_post_by"
                    style="@style/FilterMenu.Dropdown">

                    <View
                        style="@style/FilterMenu.ItemSeparator"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:id="@+id/iv_postby_icon"
                        style="@style/FilterMenu.IconStyle"
                        android:src="@drawable/ic_sellertype" />

                    <LinearLayout
                        style="@style/FilterMenu.TxtContainer"
                        android:layout_toRightOf="@+id/iv_postby_icon">

                        <TextView
                            android:id="@+id/tv_postby_title"
                            style="@style/FilterActivity.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ads_search_posted_by" />

                        <TextView
                            android:id="@+id/tv_postby_selected"
                            style="@style/FilterActivity.Text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Placeholder" />

                    </LinearLayout>

                    <ImageView style="@style/FilterMenu.DropdownArrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/search_title"
                    style="@style/FilterMenu.Dropdown">

                    <View
                        style="@style/FilterMenu.ItemSeparator"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp" />

                    <LinearLayout
                        style="@style/FilterMenu.TxtContainer"
                        android:layout_marginLeft="16dp">

                        <TextView
                            android:id="@+id/tv_search_title_only"
                            style="@style/FilterActivity.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ads_search_title_only" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/cb_search_title_only"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:button="@drawable/selector_switch"
                        android:duplicateParentState="true" />

                </RelativeLayout>

                <View
                    style="@style/FilterMenu.ItemSeparator"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp" />

                <Spinner
                    android:id="@+id/s_type"
                    style="@style/FilterMenu.spinner"
                    android:prompt="@string/ads_search_type" />

                <Spinner
                    android:id="@+id/s_sort_by"
                    style="@style/FilterMenu.spinner"
                    android:drawableLeft="@drawable/sorted_by_selector"
                    android:prompt="@string/ads_search_sort_by" />

                <Spinner
                    android:id="@+id/s_post_by"
                    style="@style/FilterMenu.spinner"
                    android:prompt="@string/ads_search_posted_by" />

                <LinearLayout
                    android:id="@+id/ll_bookmark_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgv_bookmark_save"
                        style="@style/FilterMenu.BottomIconStyle"
                        android:src="@drawable/ic_star_greenline" />

                    <TextView
                        style="@style/FilterMenu.TxtBtmTitle"
                        android:text="@string/filter_menu_bookmark_search"
                        android:textColor="@color/filter_safe_search" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/btn_search"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="12dp"
                android:background="@color/filter_reset_search"
                android:gravity="center"
                android:text="@string/btn_search"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
