<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:textSize="16sp">

    <TextView
        android:id="@+id/tv_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="@string/change_picture"
        android:textColor="@color/draft_title_red"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ic_camera"
        style="@style/Menu.ItemIcon"
        android:layout_below="@id/tv_list_header"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_camera" />

    <TextView
        android:id="@+id/take_picture"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_list_header"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@string/roboto_regular"
        android:hint="@string/take_picture" />

    <ImageView
        android:id="@+id/ic_gallery"
        style="@style/Menu.ItemIcon"
        android:layout_below="@id/take_picture"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_gallery" />

    <TextView
        android:id="@+id/browse_gallery"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/take_picture"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@string/roboto_regular"
        android:hint="@string/get_gallery" />

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyleLargeInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>