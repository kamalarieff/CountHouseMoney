<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_inbox_list"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ToggleButton
        android:id="@+id/checkBoxDelete"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_margin="15dp"
        android:background="@drawable/checkbox_selector"
        android:clickable="false"
        android:focusable="false"
        android:textOff=" "
        android:textOn=" "
        android:visibility="gone"
        tools:visibitlity="visible" />

    <ImageView
        android:id="@+id/imgAds"
        android:layout_width="94dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat_others" />

    <LinearLayout
        android:id="@+id/layoutRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:background="@drawable/chat_bottom_border"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/layoutMiddle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="name"
                android:textColor="@color/inbox_text_color"
                android:textSize="@dimen/scm_text_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="subject"
                android:textColor="@color/inbox_text_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtLastMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="message"
                android:textColor="@color/inbox_message_color"
                android:textSize="@dimen/scm_text_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txtTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:text="time"
                android:textColor="@color/inbox_text_color"
                android:textSize="@dimen/scm_text_smaller" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_room_mute_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:src="@drawable/ic_room_mute_dark" />

                <com.mudah.my.widgets.ChatCafeBadgeView
                    android:id="@+id/badgeViewLayout"
                    style="@style/inbox_list_badge" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>