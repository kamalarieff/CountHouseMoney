<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_holder"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/rl_thumb_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="94dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:visibility="visible"
            tools:src="@drawable/cat_others" />

        <TextView
            android:id="@+id/tv_image_count"
            style="@style/grid_ads_item_pic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_thumb"
            android:layout_alignRight="@+id/iv_thumb"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:text="0" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_toRightOf="@+id/rl_thumb_holder"
        android:orientation="vertical"
        android:paddingLeft="12dp">

        <TextView
            android:id="@+id/tv_subject"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:ellipsize="end"
            android:fontFamily="@string/roboto_light"
            android:maxLines="2"
            android:textColor="@color/filter_dark_grey"
            android:textSize="13dp"
            tools:text="@string/placeholder" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@string/roboto_regular"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="@color/ad_price_list"
            android:textSize="13dp"
            tools:text="@string/placeholder" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_posted"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_timestamp" />

            <TextView
                android:id="@+id/tv_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:fontFamily="@string/roboto_light"
                android:singleLine="true"
                android:textColor="@color/list_light_grey"
                android:textSize="10dp"
                tools:text="@string/placeholder" />

            <ImageView
                android:id="@+id/iv_company_ad"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_private_ad" />

            <TextView
                android:id="@+id/tv_company_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/list_light_grey"
                android:textSize="10dp"
                tools:text="@string/placeholder" />

        </LinearLayout>

        <View
            style="@style/list_divider"
            android:layout_marginTop="15dp" />
    </LinearLayout>

</RelativeLayout>

