<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/range_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingRight="8dp"
    android:paddingLeft="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/tv_label_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FilterActivity.Title"
            tools:text="@string/placeholder" />

        <EditText
            android:id="@+id/et_min"
            style="@style/PriceFilter_EditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textNoSuggestions"
            android:hint="@string/textrange_minimum"
            android:textColorHint="@color/placeholder_grey"></EditText>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp">

        <TextView
            android:id="@+id/tv_label_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FilterActivity.Title"
            tools:text="@string/placeholder" />

        <EditText
            android:id="@+id/et_max"
            style="@style/PriceFilter_EditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textNoSuggestions"
            android:hint="@string/textrange_maximum"
            android:background="@drawable/edit_text_pricerange"
            android:textColorHint="@color/placeholder_grey"></EditText>

    </LinearLayout>

</LinearLayout>