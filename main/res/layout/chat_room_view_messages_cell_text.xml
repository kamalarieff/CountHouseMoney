<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/atlas_view_messages_cell_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dip">

    <LinearLayout
        android:id="@+id/viewGroupOtherMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        android:paddingRight="40dp"
        tools:visibility="gone">

        <RelativeLayout
            android:id="@+id/viewOtherMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/l_bubble_h"
            android:longClickable="false"
            android:maxWidth="600dp"
            android:padding="10dip">

            <TextView
                android:tag="txtOtherMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone|email|web"
                android:linksClickable="true"
                android:minHeight="14dp"
                android:minWidth="60dp"
                android:textColor="@color/dark_grey"
                android:textColorLink="#428bca"
                android:textIsSelectable="true"
                android:textSize="@dimen/scm_text_small"
                tools:text="messagetext" />

            <FrameLayout
                android:id="@+id/imageOtherFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgOtherMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/roundFrameOther"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/round_corner_frame" />

            </FrameLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtOtherTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="left time"
            android:textColor="@color/medium_grey"
            android:textSize="@dimen/scm_text_tiny" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/viewGroupMyMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="end|right"
        android:orientation="horizontal"
        android:paddingLeft="40dp">

        <ImageView
            android:id="@+id/btnRetry"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"
            android:layout_margin="2dip"
            android:src="@drawable/ic_action_info_outline"
            android:visibility="gone"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/pbUploadMyImage"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="10dp"
            android:indeterminateTint="@color/red"
            android:paddingRight="5dp"
            android:layout_gravity="center_vertical"
            android:progressDrawable="@drawable/red_gradient"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMyStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:text="Read"
                android:textColor="@color/medium_grey"
                android:textSize="@dimen/scm_text_tiny"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txtMyTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|right"
                android:gravity="bottom"
                android:paddingRight="8dp"
                android:text="right time"
                android:textColor="@color/medium_grey"
                android:textSize="@dimen/scm_text_tiny" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/viewMyMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/r_bubble_h"
            android:padding="10dip">

            <TextView
                android:tag="txtMyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="phone|email|web"
                android:linksClickable="true"
                android:minHeight="14dp"
                android:minWidth="60dp"
                android:text="messagetext"
                android:textColor="@color/dark_grey"
                android:textColorLink="#428bca"
                android:textIsSelectable="true"
                android:textSize="@dimen/scm_text_small" />

            <FrameLayout
                android:id="@+id/imageMyFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgMyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/roundFrameMy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/round_corner_frame" />

            </FrameLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
