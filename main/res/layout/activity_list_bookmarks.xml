<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/actionbar"
            layout="@layout/actionbar" />

        <fragment
            android:id="@+id/f_actionbar"
            android:name="com.mudah.my.fragments.InitializationFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="gone" />

        <fragment
            android:id="@+id/f_bookmark"
            android:name="com.mudah.my.fragments.ListBookmarksFragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:tag="ct_BookmarksFragment"
            tools:layout="@layout/common_listview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_bookmark_cancel"
                style="@style/BottomButtonNoBg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="cancelClickHandle"
                android:text="@string/cancel"
                android:visibility="gone"
                tools:visibility="visible"/>

            <Button
                android:id="@+id/btn_bookmark_action"
                style="@style/BottomButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="actionClickHandle"
                android:text="@string/close" />
        </LinearLayout>
    </LinearLayout>

    <include
        android:id="@+id/left_drawer"
        layout="@layout/drawer" />
</android.support.v4.widget.DrawerLayout>