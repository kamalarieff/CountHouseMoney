<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/CustomMenuTheme">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_default_height"
        android:background="@color/action_bar_red"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:subtitleTextAppearance="@style/Toolbar.SubTitleText"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <FrameLayout
            android:id="@+id/fl_material_menu_container"
            android:layout_width="@dimen/action_bar_default_height"
            android:layout_height="@dimen/action_bar_default_height"
            android:visibility="gone"
            tools:background="@drawable/arrowback_white"
            tools:layout_height="24dp"
            tools:layout_margin="16dp"
            tools:layout_width="24dp"
            tools:visibility="visible">

            <com.balysv.materialmenu.MaterialMenuView
                android:id="@+id/material_menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:mm_color="@color/white"
                app:mm_strokeWidth="2"
                app:mm_transformDuration="500" />

        </FrameLayout>

        <ImageView
            android:id="@+id/toolbar_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:src="@drawable/logo_white"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/toolbar_tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Title"
            tools:visibility="gone" />

        <LinearLayout
            android:id="@+id/toolbar_ll_text_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/toolbar_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@string/roboto_medium"
                android:singleLine="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="Honda Accord" />

            <TextView
                android:id="@+id/toolbar_tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@string/roboto_regular"
                android:singleLine="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="Most recent result" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <View
        android:id="@+id/gradient_view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/grey_gradient_bottom" />

    <View
        android:id="@+id/red_border_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/red_gradient_bottom"
        android:visibility="gone" />

</LinearLayout>