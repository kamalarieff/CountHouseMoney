<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_param_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">
        <TextView
            android:id="@+id/tv_spinner_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            style="@style/FilterActivity.Title"
            tools:text="placeholder" />
        <ImageView
            android:id="@+id/iv_dropdown_cue"
            style="@style/FilterActivity.DropdownCue" />

        <Spinner
            android:id="@+id/s_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_below="@id/tv_spinner_label"
            android:layout_toLeftOf="@id/iv_dropdown_cue"
            android:layout_marginLeft="7dp"
            android:spinnerMode="dialog"
            >
        </Spinner>

    </RelativeLayout>

</LinearLayout>