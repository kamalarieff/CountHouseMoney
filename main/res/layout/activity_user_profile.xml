<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:isScrollContainer="true"
        android:overScrollMode="always"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/drawer_header"
                layout="@layout/profile_header" />

            <RelativeLayout
                style="@style/UserProfile.ItemContainer"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_corner_white"
                android:elevation="4dp">

                <ImageView
                    style="@style/Menu.ItemIcon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/phone_number"
                    style="@style/UserProfile.EditText"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="@string/roboto_regular"
                    android:hint="@string/add_phone_number" />

                <ImageView
                    android:id="@+id/bar"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/phone_number"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    style="@style/Menu.ItemIcon"
                    android:layout_below="@+id/bar"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/email"
                    style="@style/UserProfile.EditText"
                    android:layout_below="@+id/bar"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="@string/roboto_regular"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress" />

                <ImageView
                    android:id="@+id/bar1"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/email"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    style="@style/Menu.ItemIcon"
                    android:layout_below="@+id/bar1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_city" />

                <TextView
                    android:id="@+id/location"
                    style="@style/UserProfile.EditText"
                    android:layout_below="@+id/bar1"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="@string/roboto_regular"
                    android:hint="@string/add_location" />

                <ImageView
                    android:id="@+id/bar2"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/location"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    style="@style/Menu.ItemIcon"
                    android:layout_below="@+id/bar2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_gender" />

                <TextView
                    android:id="@+id/gender"
                    style="@style/UserProfile.EditText"
                    android:layout_below="@+id/bar2"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="@string/roboto_regular"
                    android:hint="@string/choose_gender" />

                <ImageView
                    android:id="@+id/bar3"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/gender"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    style="@style/Menu.ItemIcon"
                    android:layout_below="@+id/bar3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_cake" />

                <TextView
                    android:id="@+id/birthmonth"
                    style="@style/UserProfile.EditText"
                    android:layout_below="@+id/bar3"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="56dp"
                    android:fontFamily="@string/roboto_regular"
                    android:hint="@string/add_birthday" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>