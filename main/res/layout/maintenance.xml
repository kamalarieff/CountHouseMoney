<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loader_connection_lost_button"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="136dp"
        android:id="@+id/imgv_maintenance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_maintenance_txt"
        android:text="@string/maintenance_title"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_maintenance_sub_txt"
        android:text="@string/maintenance_subtitle"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/dark_grey" />

</LinearLayout>