<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:textSize="16sp">

    <TextView
        android:id="@+id/tv_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/change_password"
        android:textColor="@color/draft_title_red"
        android:textSize="21sp"
        android:textStyle="bold" />

    <ImageView
        style="@style/Menu.ItemIcon"
        android:layout_below="@id/tv_list_header"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_password" />

    <EditText
        android:id="@+id/current_password"
        style="@style/UserProfile.EditText"
        android:layout_below="@id/tv_list_header"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@string/roboto_regular"
        android:hint="@string/current_password"
        android:inputType="textPassword" />

    <ImageView
        style="@style/Menu.ItemIcon"
        android:layout_below="@id/current_password"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_pencil" />

    <EditText
        android:id="@+id/password"
        style="@style/UserProfile.EditText"
        android:layout_below="@id/current_password"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@string/roboto_regular"
        android:hint="@string/new_password"
        android:inputType="textPassword" />

    <ImageView
        style="@style/Menu.ItemIcon"
        android:layout_below="@id/password"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/confirm_password"
        style="@style/UserProfile.EditText"
        android:layout_below="@id/password"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@string/roboto_regular"
        android:hint="@string/confirm_new_password"
        android:inputType="textPassword" />


    <TextView
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/confirm_password"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:text="@string/set"
        android:textColor="@color/radio_blue" />

    <TextView
        android:id="@+id/cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_password"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@id/set"
        android:text="@string/cancel"
        android:textColor="@color/radio_blue" />

    <ProgressBar
        android:id="@+id/pb_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_password"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="invisible"
        tools:visibility="visible" />
</RelativeLayout>