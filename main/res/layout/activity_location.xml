<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar" />

    <fragment
        android:id="@+id/f_actionbar"
        android:name="com.mudah.my.fragments.InitializationFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_region_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_region_title"
            style="@style/LocationActivity.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:text="@string/ads_search_region" />

        <TextView
            android:id="@+id/tv_region_selected"
            style="@style/LocationActivity.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_region_title"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            tools:text="Placeholder" />

        <ImageView style="@style/LocationActivity.DropdownCue" />

        <View
            style="@style/LocationActivity.ItemSeparator"
            android:layout_alignBottom="@id/tv_region_selected" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_area_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_area_title"
            style="@style/LocationActivity.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:text="@string/ads_search_area" />

        <TextView
            android:id="@+id/tv_area_selected"
            style="@style/LocationActivity.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_area_title"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            tools:text="Placeholder" />

        <ImageView style="@style/LocationActivity.DropdownCue" />

        <View
            android:id="@+id/v_item_separator_area"
            style="@style/LocationActivity.ItemSeparator"
            android:layout_below="@id/tv_area_selected" />

        <View
            android:id="@+id/v_area_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_item_separator_area"
            android:background="@color/transparency_50"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_subregion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_subregion_title"
            style="@style/LocationActivity.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:text="@string/ads_search_subregion" />

        <TextView
            android:id="@+id/tv_subregion_selected"
            style="@style/LocationActivity.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subregion_title"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            tools:text="Placeholder" />

        <ImageView style="@style/LocationActivity.DropdownCue" />

        <View
            android:id="@+id/v_item_separator_subregion"
            style="@style/LocationActivity.ItemSeparator"
            android:layout_below="@id/tv_subregion_selected" />

        <View
            android:id="@+id/v_subregion_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/v_item_separator_subregion"
            android:background="@color/transparency_50"
            android:visibility="visible" />

    </RelativeLayout>

    <Spinner
        android:id="@+id/s_location_area"
        style="@style/FilterMenu.spinner"
        android:prompt="@string/ads_search_area" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_location_ok"
            style="@style/BottomButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>
