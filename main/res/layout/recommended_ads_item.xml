<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recommended_view_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="@dimen/adview_recommend_ad_weight"
        android:layout_height="@dimen/adview_recommend_ad_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/cat_others" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_thumb"
        android:layout_toRightOf="@+id/iv_thumb"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:textColor="@color/filter_dark_grey"
        android:textSize="14dp"
        tools:text="@string/placeholder" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_toEndOf="@+id/iv_thumb"
        android:layout_toRightOf="@+id/iv_thumb"
        android:ellipsize="end"
        android:paddingLeft="16dp"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:textColor="@color/ad_price_list"
        android:textSize="13dp"
        tools:text="@string/placeholder" />

</RelativeLayout>
