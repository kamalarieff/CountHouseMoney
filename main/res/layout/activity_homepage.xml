<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/actionbar"
            layout="@layout/actionbar" />

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/rl_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/home_bg">

                <android.support.design.widget.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">


                    <android.support.v4.view.ViewPager
                        android:id="@+id/banner_pager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/home_banner_ad_height"
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.7" />

                    <com.mudah.my.widgets.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="11dp" />

                </android.support.design.widget.CollapsingToolbarLayout>

            </android.support.design.widget.AppBarLayout>


            <android.support.v4.widget.NestedScrollView
                android:id="@+id/sv_homepage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/home_bg"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:id="@+id/content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headline"
                        style="@style/HeadLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="12dp"
                        android:text="@string/headline"
                        android:textColor="@color/text_dark_grey"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sub_headline"
                        style="@style/SubHeadLine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/sub_headline"
                        android:textColor="@color/text_dark_grey"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:id="@+id/action_section"
                        android:layout_width="match_parent"
                        android:layout_height="76dp"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp">

                        <ImageView
                            android:id="@+id/middle_bar"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:layout_centerInParent="true" />

                        <Button
                            android:id="@+id/btn_find"
                            android:layout_width="152dp"
                            android:layout_height="44dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@id/middle_bar"
                            android:background="@drawable/rounded_corner_blue"
                            android:drawableLeft="@drawable/action_search_white"
                            android:drawablePadding="20dp"
                            android:drawableStart="@drawable/action_search_white"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="14dip"
                            android:paddingStart="14dip"
                            android:text="@string/find"
                            android:textColor="@color/white"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_sell"
                            android:layout_width="152dp"
                            android:layout_height="44dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@id/middle_bar"
                            android:layout_toRightOf="@id/middle_bar"
                            android:background="@drawable/rounded_corner_red"
                            android:drawableLeft="@drawable/ic_camera_white"
                            android:drawablePadding="20dp"
                            android:drawableStart="@drawable/ic_camera_white"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="14dip"
                            android:paddingStart="14dip"
                            android:text="@string/sell"
                            android:textColor="@color/white"
                            android:textSize="21sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/free"
                            android:layout_width="37dp"
                            android:layout_height="37dp"
                            android:layout_marginLeft="-37dp"
                            android:layout_marginStart="-37dp"
                            android:layout_toEndOf="@id/btn_sell"
                            android:layout_toRightOf="@id/btn_sell"
                            android:src="@drawable/free_btngimmick" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/light_grey_divider" />

                    <LinearLayout
                        android:id="@+id/action_tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@color/home_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/categories"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/homepage_tab_bottom_border"
                            android:gravity="center"
                            android:paddingBottom="16dp"
                            android:text="@string/categories"
                            android:textColor="@color/banner_header"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/recommended_ads"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:paddingBottom="16dp"
                            android:text="@string/recommended_ads"
                            android:textColor="@color/banner_header"
                            android:textSize="13sp"
                            android:visibility="invisible"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/grey_background"
                        android:gravity="bottom"
                        android:src="@drawable/shadow_divider_top" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey_background"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/category_grid"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/category_grid_height"
                            android:layout_gravity="center_horizontal"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <TextView
                android:id="@+id/skip_tutorial"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="@color/chat_msg_box_bg"
                android:elevation="15dp"
                android:gravity="center"
                android:text="@string/skip_tutorial"
                android:textColor="@color/text_dark_blue"
                android:visibility="gone" />
        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>

    <include
        android:id="@+id/left_drawer"
        layout="@layout/drawer" />

</android.support.v4.widget.DrawerLayout>
