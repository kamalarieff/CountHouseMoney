<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/btn_grey_default" android:state_enabled="true" android:state_window_focused="false" />
    <item android:drawable="@drawable/btn_grey_disabled" android:state_enabled="false" android:state_window_focused="false" />
    <item android:drawable="@drawable/btn_grey_selected" android:state_enabled="true" android:state_focused="true" />
    <item android:drawable="@drawable/btn_grey_pressed" android:state_pressed="true" />
    <item android:drawable="@drawable/btn_grey_selected" android:state_focused="true" />

    <item android:drawable="@drawable/btn_grey_pressed" android:state_checked="true" />
    <!-- pressed -->
    <item android:drawable="@drawable/btn_grey_default" android:state_checked="false" />
    <!-- default/unchecked -->
    <item android:drawable="@drawable/btn_grey_default" />
</selector>